<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@color/activity_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@id/button_bbs_section_detail_back"
            android:layout_width="40.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/screen_side"
            android:background="@null"
            android:drawableLeft="@drawable/bt_back" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

        <LinearLayout
            android:id="@id/layout_bbs_section_detail_all"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@id/button_bbs_section_detail_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/bbs_section_all"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@id/image_bbs_section_detail_all"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginTop="6.0dip"
                android:background="#ffffffff"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/layout_bbs_section_detail_elite"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@id/button_bbs_section_detail_elite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/bbs_section_elite1"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@id/image_bbs_section_detail_elite"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginTop="6.0dip"
                android:background="#ffffffff"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

        <Button
            android:id="@id/button_bbs_section_detail_publish"
            android:layout_width="21.0dip"
            android:layout_height="21.0dip"
            android:layout_marginRight="@dimen/screen_side"
            android:background="@drawable/bbs_publish" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:padding="@dimen/screen_side">

        <ImageView
            android:id="@id/image_bbs_section_detail_avatar"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/image_wait_for_loading"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@id/text_bbs_section_detail_switch"
            android:layout_width="65.0dip"
            android:layout_height="30.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bbs_un_follow"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="15.0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80.0dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/screen_side"
            android:layout_marginRight="@dimen/screen_side"
            android:layout_toLeftOf="@id/text_bbs_section_detail_switch"
            android:layout_toRightOf="@id/image_bbs_section_detail_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@id/text_bbs_section_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:textSize="17.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="11.0dip"
                    android:layout_height="16.0dip"
                    android:layout_marginLeft="4.0dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/bbs_section_follow_count" />

                <TextView
                    android:id="@id/text_bbs_section_detail_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:textColor="#ff999999"
                    android:textSize="12.0sp" />

                <ImageView
                    android:layout_width="14.0dip"
                    android:layout_height="16.0dip"
                    android:layout_marginLeft="@dimen/screen_side"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/bbs_section_post_count" />

                <TextView
                    android:id="@id/text_bbs_section_detail_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:textColor="#ff999999"
                    android:textSize="12.0sp" />

                <ImageView
                    android:layout_width="15.0dip"
                    android:layout_height="16.0dip"
                    android:layout_marginLeft="@dimen/screen_side"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/bbs_section_reply_count" />

                <TextView
                    android:id="@id/text_bbs_section_detail_discuss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:textColor="#ff999999"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@id/layout_bbs_section_detail_refresh"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

<!--            <com.handmark.pulltorefresh.library.PullToRefreshListView
                android:id="@id/listview_bbs_section_detail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null"
                android:scrollbars="none"
                ptr:ptrDrawable="@drawable/pull_to_fresh"
                ptr:ptrHeaderBackground="#ffffffff"
                ptr:ptrHeaderTextColor="#ff999999" />-->
        </android.support.v4.widget.SwipeRefreshLayout>

        <com.withustudy.koudaizikao.custom.LoadingView
            android:id="@id/loading_bbs_section_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>
</LinearLayout>