<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_title"
        android:background="@color/activity_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@id/button_simulation_history_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/screen_side"
            android:background="@drawable/bt_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="@string/simulation_history_title"
            android:textColor="#ffffffff"
            android:textSize="@dimen/text_title" />
    </LinearLayout>

    <TextView
        android:id="@id/text_simulation_history_subject_name"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:gravity="center"
        android:textColor="#ff000000"
        android:textSize="16.0sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="#ffc0c0c0"
        android:contentDescription="@string/app_name" />
