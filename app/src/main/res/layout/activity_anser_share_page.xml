<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/ll_parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff6f6f6">

        <ImageButton
            android:id="@id/anser_back"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13.0dip"
            android:layout_marginRight="13.0dip"
            android:background="@drawable/anser_back"
            android:padding="10.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.53"
        android:background="#fff6f6f6">

        <RelativeLayout
            android:layout_width="200.0dip"
            android:layout_height="200.0dip"
            android:layout_centerInParent="true"
            android:background="@drawable/anser_a">

            <ImageView
                android:layout_width="200.0dip"
                android:layout_height="200.0dip"
                android:background="@drawable/anser_d"
                android:visibility="gone" />

            <LinearLayout
                android:id="@id/ll_defalt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#ff00b8e6"
                    android:textSize="50.0dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="正确率"
                    android:textColor="#ff00b8e6"
                    android:textSize="12.0dip" />
            </LinearLayout>

   <!--         <com.withustudy.koudaizikao.custom.circleprogressbar.CircleProgressBar
                android:id="@id/bar3"
                android:layout_width="280.0dip"
                android:layout_height="280.0dip"
                android:visibility="gone"
                app:cpbForegroundColor="#ff00b8e6"
                app:cpbMaxAngle="360"
                app:cpbNeedAnim="false"
                app:cpbProgressTextColor="#ff00b8e6"
                app:cpbStartAngle="-90"
                app:cpbStrokeWidth="15"
                app:cpbWholeBackgroundColor="#fff6f6f6" />-->
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff6f6f6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15.0dip">

            <ImageView
                android:layout_width="54.0dip"
                android:layout_height="69.0dip"
                android:background="@drawable/major_pic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@id/tv_beat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="恭喜你完成了本节的刷题"
                    android:textColor="#ff00b9e4"
                    android:textSize="12.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="获得做题小霸王称号"
                    android:textColor="#fffb7a05"
                    android:textSize="25.0dip" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="30.0dip"
        android:text="第二次鸦片战争"
        android:textColor="#ff737373"
        android:textSize="20.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="做题"
                android:textColor="#ffcacaca"
                android:textSize="16.0dip" />

            <TextView
                android:id="@id/tv_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:text="XXX道"
                android:textColor="#ff00b9e4"
                android:textSize="20.0dip" />
        </LinearLayout>

        <ImageView
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="#ffd2d2d2" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正确"
                android:textColor="#ffcacaca"
                android:textSize="16.0dip" />

            <TextView
                android:id="@id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:text="XXX道"
                android:textColor="#ff58ce16"
                android:textSize="20.0dip" />
        </LinearLayout>

        <ImageView
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="#ffd2d2d2" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="错题"
                android:textColor="#ffcacaca"
                android:textSize="16.0dip" />

            <TextView
                android:id="@id/tv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:text="XXX道"
                android:textColor="#fff96178"
                android:textSize="20.0dip" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35.0dip"
                android:gravity="center_horizontal">

                <Button
                    android:id="@id/share"
                    android:layout_width="336.0dip"
                    android:layout_height="36.5dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_answer_share_btn"
                    android:padding="5.0dip"
                    android:text="果断分享"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>